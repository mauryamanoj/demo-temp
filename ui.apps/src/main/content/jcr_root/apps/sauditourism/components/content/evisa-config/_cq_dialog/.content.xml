<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="E-Visa Config"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[cq.common.wcm,sauditourism.author]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Labels and Image"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <items jcr:primaryType="nt:unstructured">
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                granite:class="s7-image-listener"
                                fieldLabel="Image"
                                name="./image/fileReference"
                                rootPath="/content/dam">
                            </image>
                            <s7fileReference
                                granite:class="s7-fileReference"
                                jcr:primaryType="nt:unstructured"
                                granite:id="s7-fileReference"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                name="./image/s7fileReference">
                            </s7fileReference>
                            <alt-image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Alt text of the image"
                                name="./image/alt">
                            </alt-image>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Check if you need an entry visa to Saudi Arabia"
                                fieldDescription="Title"
                                fieldLabel="Title"
                                name="./title"/>
                            <selectCountryLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Select Country of Residency"
                                fieldDescription="Select country label"
                                fieldLabel="Select country label"
                                required="{Boolean}true"
                                name="./selectCountryLabel"/>
                            <selectCountryPlaceholder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Select a country"
                                fieldDescription="Select country placeholder"
                                fieldLabel="Select country placeholder"
                                required="{Boolean}true"
                                name="./selectCountryPlaceholder"/>
                            <searchCountryPlaceholder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Quick Search"
                                fieldDescription="Search country placeholder"
                                fieldLabel="Search country placeholder"
                                required="{Boolean}true"
                                name="./searchCountryPlaceholder"/>
                            <selectQuestionLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Tell us a bit more about you"
                                fieldDescription="Select Question Label"
                                fieldLabel="Select Question Label"
                                required="{Boolean}true"
                                name="./selectQuestionLabel"/>
                            <selectQuestionPlaceholder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Please select an option"
                                fieldDescription="Select Question Placeholder"
                                fieldLabel="Select Question Placeholder"
                                required="{Boolean}true"
                                name="./selectQuestionPlaceholder"/>
                            <informationsLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Informations"
                                fieldDescription="Informations Label"
                                fieldLabel="Informations Label"
                                required="{Boolean}true"
                                name="./informationsLabel"/>
                            <requirementsLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                value="Requirements"
                                fieldDescription="Requirements Label"
                                fieldLabel="Requirements Label"
                                required="{Boolean}true"
                                name="./requirementsLabel"/>
                            <eligibleForLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Eligible for Label"
                                fieldLabel="Eligible for Label"
                                required="{Boolean}true"
                                name="./eligibleForLabel"/>
                        </items>
                    </tab1>
                    <tab2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Questions"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <items jcr:primaryType="nt:unstructured">
                            <questionsByVisaGroup
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    name="./questionsByVisaGroup"
                                    granite:class="accordion-multifield-item"
                                    sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                    <items jcr:primaryType="nt:unstructured">
                                        <questions
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Questions by Visa Group"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <visaGroup
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Visa Group"
                                                    fieldLabel="Visa Group"
                                                    required="{Boolean}true"
                                                    name="./visaGroup">
                                                    <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="sauditourism/datasource/countries-groups"/>
                                                </visaGroup>
                                                <questions
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldLabel="Questions"
                                                    fieldDescription="Questions">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./questions"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <code
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Question code"
                                                                name="./code"
                                                                required="{Boolean}true">
                                                                <datasource
                                                                    jcr:primaryType="nt:unstructured"
                                                                    path="sauditourism/components/content/utils/evisa-questions"
                                                                    sling:resourceType="sauditourism/generic/datasource"/>
                                                            </code>
                                                            <label
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Question label"
                                                                name="./label"
                                                                required="{Boolean}true"/>
                                                        </items>
                                                    </field>
                                                </questions>
                                            </items>
                                        </questions>
                                    </items>
                                </field>
                            </questionsByVisaGroup>
                        </items>
                    </tab2>
                    <tab3
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Visa Types"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <items jcr:primaryType="nt:unstructured">
                            <visaTypes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    name="./visaTypes"
                                    granite:class="accordion-multifield-item"
                                    sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                    <items jcr:primaryType="nt:unstructured">
                                        <visaTypes
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Visa type"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <visaGroup
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Visa Group"
                                                    fieldLabel="Visa Group"
                                                    required="{Boolean}true"
                                                    name="./visaGroup">
                                                    <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="sauditourism/datasource/countries-groups"/>
                                                </visaGroup>
                                                <visaTypesTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Visa Types Title"
                                                    name="./visaTypesTitle"/>
                                                <questions
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldLabel="Questions"
                                                    fieldDescription="Questions">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./questions"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <code
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Question code"
                                                                name="./code"
                                                                required="{Boolean}true">
                                                                <datasource
                                                                    jcr:primaryType="nt:unstructured"
                                                                    path="sauditourism/components/content/utils/evisa-questions"
                                                                    sling:resourceType="sauditourism/generic/datasource"/>
                                                            </code>
                                                            <response
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                fieldLabel="Question Response"
                                                                name="./response"
                                                                text="Question Response"
                                                                uncheckedValue="{Boolean}false"
                                                                value="{Boolean}true"/>
                                                        </items>
                                                    </field>
                                                </questions>
                                                <sections
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldLabel="Sections"
                                                    fieldDescription="Sections">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./sections"
                                                        granite:class="accordion-multifield-item"
                                                        sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <section
                                                                jcr:primaryType="nt:unstructured"
                                                                jcr:title="Section"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <icon
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                        fieldDescription="Kindly select an image in SVG format."
                                                                        fieldLabel="SVG Icon Path"
                                                                        name="./icon"
                                                                        rootPath="/content/dam"
                                                                        required="{Boolean}true"/>
                                                                    <mobileIcon
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                        fieldDescription="Kindly select an image in SVG format."
                                                                        fieldLabel="Mobile SVG Icon Path"
                                                                        name="./mobileIcon"
                                                                        rootPath="/content/dam"
                                                                        required="{Boolean}true"/>
                                                                    <title
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Title"
                                                                        name="./title"
                                                                        required="{Boolean}true"/>
                                                                    <description
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                        fieldLabel="Description"
                                                                        name="./description"
                                                                        useFixedInlineToolbar="{Boolean}true"
                                                                        removeSingleParagraphContainer="{Boolean}true">
                                                                        <rtePlugins
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceSuperType="/apps/sauditourism/components/commons/editor/dialog/rte-config/rtePlugins"/>
                                                                        <uiSettings
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceSuperType="/apps/sauditourism/components/commons/editor/dialog/rte-config/uiSettings"/>
                                                                    </description>
                                                                    <requirementsAndDocumentation
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                        fieldLabel="Requirements And Documentation"
                                                                        name="./requirementsAndDocumentation"
                                                                        useFixedInlineToolbar="{Boolean}true"
                                                                        removeSingleParagraphContainer="{Boolean}true">
                                                                        <rtePlugins
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceSuperType="/apps/sauditourism/components/commons/editor/dialog/rte-config/rtePlugins"/>
                                                                        <uiSettings
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceSuperType="/apps/sauditourism/components/commons/editor/dialog/rte-config/uiSettings"/>
                                                                    </requirementsAndDocumentation>
                                                                    <informations
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                        composite="{Boolean}true"
                                                                        fieldLabel="Informations"
                                                                        fieldDescription="Informations">
                                                                        <field
                                                                            jcr:primaryType="nt:unstructured"
                                                                            name="./informations"
                                                                            granite:class="accordion-multifield-item"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                                                            <items jcr:primaryType="nt:unstructured">
                                                                                <information
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    jcr:title="Information"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                    <items
                                                                                        jcr:primaryType="nt:unstructured">
                                                                                        <Key
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                            fieldLabel="Key"
                                                                                            name="./key"
                                                                                            required="{Boolean}true"/>
                                                                                        <Value
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                            fieldLabel="Value"
                                                                                            name="./value"
                                                                                            required="{Boolean}true"/>
                                                                                    </items>
                                                                                </information>
                                                                            </items>
                                                                        </field>
                                                                    </informations>
                                                                    <ctaCardTitle
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="CTA Card Title"
                                                                        name="./card/title"/>
                                                                    <ctaCardLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="CTA Card Label"
                                                                        name="./card/link/text"/>
                                                                    <ctaCardLink
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                        fieldLabel="CTA Card Link"
                                                                        fieldDescription="This field to configure CTA link"
                                                                        name="./card/link/url"
                                                                        rootPath="/content/sauditourism"/>
                                                                    <ctaCardLinkOpenNewTab
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                        fieldDescription="Open new tab if checked"
                                                                        fieldLabel="CTA Card Link Open in New Tab"
                                                                        name="./card/link/targetInNewWindow"
                                                                        text="CTA Card Link Open in New Tab"
                                                                        uncheckedValue="false"
                                                                        value="{Boolean}true"/>
                                                                    <ctaCardIcon
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                        fieldLabel="Icon Path"
                                                                        name="./card/icon"
                                                                        rootPath="/content/dam"/>
                                                                    <ctaCardviewMoreLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="View More Label"
                                                                        name="./card/viewMoreLabel"/>
                                                                    <ctaCardViewMoreMobileLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="View More Mobile Label"
                                                                        name="./card/viewMoreMobileLabel"/>
                                                                </items>
                                                            </section>
                                                        </items>
                                                    </field>
                                                </sections>
                                            </items>
                                        </visaTypes>
                                    </items>
                                </field>
                            </visaTypes>
                        </items>
                    </tab3>
                    <downloadAppsConfiguration
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Download Apps Configuration"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multifield
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            class="multifield-full-width"
                                                            composite="{Boolean}true"
                                                            fieldDescription="Click 'Add' to new Brand apps container"
                                                            fieldLabel="Brand Specific Apps">
                                                        <field
                                                                granite:class="accordion-multifield-item"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                                name="./appAdDownload">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <column
                                                                        jcr:primaryType="nt:unstructured"
                                                                        jcr:title="New Brand Specific Apps Config"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <description
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                                fieldLabel="App Description"
                                                                                name="./html"
                                                                                useFixedInlineToolbar="{Boolean}true"
                                                                                removeSingleParagraphContainer="{Boolean}true"
                                                                                required="{Boolean}true">
                                                                            <rtePlugins
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceSuperType="/apps/sauditourism/components/commons/editor/dialog/rte-config/rtePlugins"/>
                                                                            <uiSettings
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceSuperType="/apps/sauditourism/components/commons/editor/dialog/rte-config/uiSettings"/>
                                                                        </description>
                                                                        <brandIcon
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                                emptyText="Brand Icon"
                                                                                fieldDescription="Select the icon based on the site"
                                                                                fieldLabel="Brand Icon"
                                                                                name="./imageURL"
                                                                                required="{Boolean}false"
                                                                                rootPath="/content/dam"/>
                                                                    </items>
                                                                </column>
                                                            </items>
                                                        </field>
                                                    </multifield>
                                                </items>
                                            </column>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </downloadAppsConfiguration>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
