<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          extraClientlibs="[sauditourism.author]"
          jcr:title="Placeholders"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="core-wcm-show-hide dialog-container"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <properties
                jcr:primaryType="nt:unstructured"
                sling:hideResource="true"/>
            <placeholders
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                jcr:title="Placeholders"
                cq:showOnCreate="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <keys
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                fieldDescription="Click 'Add' to add a new item"
                                fieldLabel="List of placeholders"
                                jcr:primaryType="nt:unstructured"
                                composite="{Boolean}true">
                                <field
                                    granite:class="accordion-multifield-item"
                                    sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                    jcr:primaryType="nt:unstructured"
                                    name="./keys">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:title="New Placeholder"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    granite:class="accordion-multifield-item-title"
                                                    fieldLabel="Placeholder identifier"
                                                    fieldDescription="Text to be translated in the pages."
                                                    required="{Boolean}true"
                                                    name="./title" />
                                                <translations
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    jcr:primaryType="nt:unstructured"
                                                    name="./translations">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <language0
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item0/language" 
                                                            value="en" />
                                                        <translation0
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="EN translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            required="{Boolean}true"
                                                            name="./translations/item0/translation"/>
                                                        <language1
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item1/language" 
                                                            value="es" />
                                                        <translation1
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="ES translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            name="./translations/item1/translation"/>
                                                        <language2
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item2/language" 
                                                            value="ru" />
                                                        <translation2
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="RU translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            name="./translations/item2/translation"/>
                                                        <language3
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item3/language" 
                                                            value="ja" />
                                                        <translation3
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="JA translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            name="./translations/item3/translation"/>
                                                        <language4
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item4/language" 
                                                            value="de" />
                                                        <translation4
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="DE translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            name="./translations/item4/translation"/>
                                                        <language5
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item5/language" 
                                                            value="fr" />
                                                        <translation5
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="FR translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            name="./translations/item5/translation"/>
                                                        <language6
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item6/language" 
                                                            value="ar" />
                                                        <translation6
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="AR translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            name="./translations/item6/translation"/>
                                                        <language7
                                                            granite:class="placeholders-key"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Language"
                                                            renderHidden="{Boolean}true"
                                                            name="./translations/item7/language" 
                                                            value="zh" />
                                                        <translation7
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="ZH translation (20 chars. max)"
                                                            fieldDescription="Text to replace the placeholder identifier with."
                                                            maxlength="{Long}20"
                                                            name="./translations/item7/translation"/>
                                                    </items>
                                                </translations>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </keys>
                        </items>
                    </column>
                </items>
            </placeholders>
        </items>
    </content>
</jcr:root>
